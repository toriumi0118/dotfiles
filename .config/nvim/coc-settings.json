{
  "suggest.noselect": true,
  "coc.preferences.formatOnSave": true,
  "snippets.textmateSnippetsRoots": ["~/.config/nvim/snippets"],
  "eslint.autoFixOnSave": true,
  "eslint.packageManager": "yarn",
  "eslint.nodePath": ".yarn/sdks",
  "workspace.workspaceFolderCheckCwd": false,
  "stylelintplus.autoFixOnSave": true,
  "stylelintplus.validateOnSave": true,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  },

  "rust-analyzer.check.command": "clippy",

  "flutter.sdk.flutter-lookup": "asdf which flutter",
  "flutter.workspaceFolder.ignore": ["~/.pub-cache/"],
  "inlayHint.enable": false,

  "workspace.ignoredFolders": ["$HOME", "$HOME/.cargo/**", "$HOME/.rustup/**"],
  "snippets.ultisnips.pythonPrompt": false
}
